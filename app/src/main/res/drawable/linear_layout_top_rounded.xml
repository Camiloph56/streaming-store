        android:topLeftRadius="80dp"
        android:topRightRadius="80dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp"/>

    <!-- Padding interno -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>

</shape>